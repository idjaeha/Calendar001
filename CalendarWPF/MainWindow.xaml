<Window
    x:Class="CalendarWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CalendarWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="800"
    Height="600"
    Background="Transparent"
    Loaded="Window_Loaded"
    MouseLeftButtonDown="Window_MouseLeftDown"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    Visibility="Visible"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <System:String x:Key="Label_Month">Month</System:String>
        <System:String x:Key="TextBox_Monday">월</System:String>
        <System:String x:Key="TextBox_Tueday">월</System:String>
        <System:String x:Key="TextBox_WedDay">수</System:String>
        <System:String x:Key="TextBox_TueDay">화</System:String>
        <System:String x:Key="TextBox_MonDay">월</System:String>
        <System:String x:Key="TextBox_ThuDay">목</System:String>
        <System:String x:Key="TextBox_FriDay">금</System:String>
        <System:String x:Key="TextBox_SatDay">토</System:String>
        <System:String x:Key="TextBox_SunDay">일</System:String>
        <SolidColorBrush x:Key="BackgroundColor" Color="#CC000000" />
    </Window.Resources>
    <Canvas
        Width="800"
        Height="600"
        HorizontalAlignment="Left"
        VerticalAlignment="Top">
        <Canvas Width="800" Height="100">
            <Canvas
                Canvas.Left="0"
                Canvas.Top="0"
                Width="790"
                Height="90"
                Margin="5"
                Background="{DynamicResource BackgroundColor}"
                Focusable="True">
                <Label
                    x:Name="Label_Year"
                    Canvas.Left="80"
                    Canvas.Top="45"
                    Margin="0"
                    Content="2020"
                    FontSize="14"
                    Foreground="White" />
                <Button
                    Canvas.Left="705"
                    Canvas.Top="10"
                    Width="75"
                    Background="{x:Null}"
                    Click="Button_ClickNextMonth"
                    Content="Next"
                    Foreground="White" />
                <Button
                    Canvas.Left="625"
                    Canvas.Top="11"
                    Width="75"
                    Background="{x:Null}"
                    Click="Button_ClickPrevMonth"
                    Content="Prev"
                    Foreground="White" />
                <Label
                    x:Name="Label_Today"
                    Canvas.Left="705"
                    Canvas.Top="48"
                    Width="75"
                    Content="2020-00-00"
                    Foreground="White" />
                <Label
                    x:Name="Label_Month"
                    Canvas.Left="14"
                    Canvas.Top="8"
                    Width="61"
                    Content="1"
                    FlowDirection="RightToLeft"
                    FontSize="48"
                    FontWeight="Bold"
                    Foreground="White" />
            </Canvas>
        </Canvas>
        <Canvas
            Canvas.Top="100"
            Width="800"
            Height="500">
            <Canvas
                Canvas.Left="0"
                Canvas.Top="0"
                Width="790"
                Height="490"
                Margin="5"
                Background="{DynamicResource BackgroundColor}"
                Focusable="True">
                <Grid
                    x:Name="Calendar_Days"
                    Canvas.Left="0"
                    Canvas.Top="50"
                    Width="790"
                    Height="440"
                    Focusable="True">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                </Grid>
                <Grid
                    Canvas.Left="0"
                    Canvas.Top="0"
                    Width="790"
                    Height="50">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="1"
                        Margin="10,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="20"
                        Foreground="White"
                        Text="{DynamicResource TextBox_MonDay}"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Grid.Column="2"
                        Margin="10,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="20"
                        Foreground="White"
                        Text="{DynamicResource TextBox_TueDay}"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Grid.Column="3"
                        Margin="10,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="20"
                        Foreground="White"
                        Text="{DynamicResource TextBox_WedDay}"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Grid.Column="4"
                        Margin="10,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="20"
                        Foreground="White"
                        Text="{DynamicResource TextBox_ThuDay}"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Grid.Column="5"
                        Margin="10,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="20"
                        Foreground="White"
                        Text="{DynamicResource TextBox_FriDay}"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Grid.Column="6"
                        Margin="10,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="20"
                        Foreground="#FF001DFF"
                        Text="{DynamicResource TextBox_SatDay}"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Grid.Column="0"
                        Margin="10,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="20"
                        Foreground="#FFB10303"
                        Text="{DynamicResource TextBox_SunDay}"
                        TextWrapping="Wrap" />
                </Grid>

            </Canvas>
        </Canvas>
    </Canvas>
</Window>
